<!DOCTYPE html>
<html>
<head>
  <title>Imgur-Clone</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default navbar-static-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Imgur-Clone", root_path, class: "navbar-brand" %>
    </div>

    <div class="collapse navbar-collapse" id="navbar-collapse-1">
      <ul class="nav navbar-nav navbar-left">
        <li><%= link_to "Upload image", images_path %></li>
        <% if user_signed_in? %>
          <% if current_user.admin? %>
            <li><%= link_to "Charts", new_admin_chart_path %></li>
          <% else %>
            <li><%= link_to "Charts", new_user_chart_path %></li>
          <% end %>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li>
            <p class="navbar-text">
            <% if current_user.email.present? %>
              <%= current_user.email %>
            <% else %>
              <%= current_user.username %>
            <% end %>
            </p>
          </li>
          <li><%= link_to "Edit profile", edit_user_registration_path %></li>
          <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "Sign up", new_user_registration_path %></li>
          <li><%= link_to "Login", new_user_session_path %></li>
        <% end %>
      </ul>
      <%= form_tag(images_path, method: :get, class: "navbar-form navbar-right", id: "search-form") do %>
        <div class="form-group">
          <%= text_field_tag :search, params[:search], placeholder: "Search images tags" %>
        </div>
        <button type="submit" class="btn btn-default">Search</button>
      <% end %>
    </div>
  </div>
</nav>

<div id="main-container" class="container">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
  </div>
</div>

</body>
</html>
