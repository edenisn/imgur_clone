<h3>User images</h3>

<table class="table table-hover">
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Attachment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <% @images.each do |image| %>
    <tbody>
      <tr>
        <td><%= image.name %></td>
        <td><%= image.description %></td>
        <td><%= image_tag image.attachment_url(:thumb) if image.attachment? %></td>
        <td><%= image.attachment_url %></td>
        <td><%= social_share_button_tag(image.name, url: "#{image.attachment_url}") %></td>
        <td><%= link_to "Edit", edit_image_path(image) %></td>
        <td><%= link_to "Delete", image_path(image),
                        method: :delete,
                        data: { confirm: "Are you sure?" } %></td>
      </tr>
    </tbody>
  <% end %>
</table>

